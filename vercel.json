{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [{ "source": "/api/(.*)", "destination": "/server/api/$1.js" }],
  "routes": [
    {
      "src": "/.*\\.(svg|css|js|png|jpg|webp|ttf|woff2|ogg|mp3)$",
      "dest": "/$1",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/.*",
      "dest": "/index.html",
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }
    }
  ]
}
