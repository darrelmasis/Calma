{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd client && npm run build"
      }
    },
    {
      "src": "server/src/api/booking-send-mail.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/booking/send-mail",
      "methods": ["POST"],
      "dest": "/server/src/api/booking-send-mail.js"
    },

    {
      "src": "/assets/(.*)",
      "dest": "/client/assets/$1"
    },
    {
      "src": "/logo-calma.svg",
      "dest": "/client/logo-calma.svg"
    },
    {
      "src": "/logo-calma-bold.svg",
      "dest": "/client/logo-calma-bold.svg"
    },
    {
      "src": "/whatsapp_logo.svg",
      "dest": "/client/whatsapp_logo.svg"
    },

    {
      "src": "/(.*)",
      "dest": "/client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html"
    }
  ]
}
