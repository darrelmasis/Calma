{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd client && npm run build"
      }
    },
    {
      "src": "server/src/api/booking-send-mail.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/booking/send-mail",
      "methods": ["POST"],
      "dest": "/server/src/api/booking-send-mail.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/assets/$1"
    },
    {
      "src": "/(.*\\.(svg|css|js|png|jpg|ttf|woff2))",
      "dest": "/client/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ]
}
