{
  "version": 2,
  "cleanUrls": true,
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/api/$1.js" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.(svg|css|js|png|jpg|webp|ttf|woff2|ogg|mp3))", "dest": "/$1", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/robots.txt", "dest": "/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/sitemap.xml" },
    { "src": "/humans.txt", "dest": "/humans.txt" },
    {
      "src": "/.*",
      "dest": "/index.html",
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }
    }
  ]
}
