{
  "singleQuote": true,
  "semi": false,
  "tabWidth": 2,
  "printWidth": 160,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "useTabs": false,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.scss",
      "options": { "parser": "scss" }
    },
    {
      "files": ["*.json", "*.md", "*.html", "*.css"],
      "options": { "tabWidth": 2 }
    }
  ]
}
