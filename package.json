{
  "name": "calma",
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write --list-different \"{client,server}/**/*.{js,jsx,ts,tsx,css,scss,md,json}\"",
    "format:check": "prettier --check \"{client,server}/**/*.{js,jsx,ts,tsx,scss,css}\"",
    "build:client": "npm install --prefix client && npm run build --prefix client",
    "dev": "concurrently \"npm run dev --prefix client\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "3.5.3"
  }
}
